<div class="fixed bottom-6 right-6 z-50">

  <div class="dropdown dropdown-top dropdown-end">

    <!-- Botão do Chatbot - Estilo GTA VI -->
    <label tabindex="0" class="btn btn-circle bg-gradient-to-br from-red-600 to-red-800 hover:from-red-700 hover:to-red-900 border-2 border-yellow-500 w-16 h-16 shadow-lg transform transition-all hover:scale-110 hover:shadow-red-500/30 animate-pulse">
      <div class="relative">
        <i class="fas fa-robot text-2xl text-yellow-400"></i>
        <!-- Efeito de brilho opcional -->
        <div class="absolute inset-0 rounded-full bg-yellow-400 opacity-0 hover:opacity-10 transition-opacity"></div>
      </div>
    </label>

    <!-- Janela do Chat - Estilo GTA VI -->
    <div tabindex="0" class="dropdown-content w-80 bg-gray-900 rounded-lg shadow-2xl mb-4 p-0 border-2 border-yellow-500 overflow-hidden">
      
      <!-- Cabeçalho do Chat -->
      <div class="bg-gradient-to-r from-red-700 to-red-900 p-3 flex items-center">
        <i class="fas fa-robot text-yellow-400 mr-2"></i>
        <h3 class="font-bold text-white">Assistente GTA VI</h3>
        <div class="ml-auto flex space-x-1">
          <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-400 opacity-60"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-400 opacity-30"></div>
        </div>
      </div>
      
      <!-- Área de Mensagens -->
      <div id="chat-messages" class="max-h-60 overflow-y-auto p-4 bg-gray-900/80">
        <div class="chat chat-start">
          <div class="chat-bubble bg-gray-800 text-white border border-gray-700">
            Olá! Sou o assistente do GTA VI. Pergunte-me sobre o jogo, personagens, veículos ou qualquer coisa sobre Vice City!
          </div>
        </div>
      </div>

      <!-- Área de Input -->
      <div class="p-3 bg-gray-800 border-t border-gray-700">
        <div class="flex space-x-2">
          <input id="user-input" type="text" placeholder="Digite sua mensagem..." 
                 class="input w-full bg-gray-700 text-white border border-gray-600 focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500/50">
          
          <button id="send-btn" class="btn bg-gradient-to-br from-yellow-600 to-yellow-700 border-none hover:from-yellow-500 hover:to-yellow-600 text-white">
            <span id="send-icon"><i class="fas fa-paper-plane"></i></span>
            <span id="loading-spinner" class="hidden"><i class="fas fa-spinner fa-spin"></i></span>
          </button>
        </div>
      </div>
      
    </div>

  </div>

</div>